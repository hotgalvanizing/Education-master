<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_above="@+id/bottom_main"
        android:background="@color/window_background"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/bottom_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_color"
        app:tl_iconGravity="TOP"
        app:tl_iconMargin="@dimen/dp2"
        app:tl_textSelectColor="@color/bottom_textSelectColor"
        app:tl_textUnselectColor="@color/bottom_textUnSelectColor"/>

</RelativeLayout>